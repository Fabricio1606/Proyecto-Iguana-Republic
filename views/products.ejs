<!DOCTYPE html>
<html lang="zxx" class="no-js">
  <head>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="shortcut icon" href="/img/fav.png" />
    <meta name="author" content="codepixer" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta charset="UTF-8" />
    <title>Iguana Republic</title>
    <link
      href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/products.css" />
    <link rel="stylesheet" href="/css/linearicons.css" />
    <link rel="stylesheet" href="/css/font-awesome.min.css" />
    <link rel="stylesheet" href="/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <link rel="stylesheet" href="/css/elements/transition.css">
    <link rel="stylesheet" href="/css/elements/filter.css">
  </head>
  <body data-barba="wrapper">
    
    <div class="transition"></div>
    <%- include('header', {}); %>
    <main data-barba="container" data-barba-namespace="home" class="cube">


      <div class="overlay" style="display: none"></div>
      <div class="search-section" >
        <div class="container-fluid container-xl">
          <div class="row row-cols-1 row-cols-md-3 g-4 py-5">
            <!-- Sidebar filter -->
            <div class="sidebar col px-0 upside">
              <h1
                class="border-bottom filter-header d-flex d-md-none p-3 mb-0 align-items-center"
              >
                <span class="mr-2 filter-close-btn"> X </span>
                Filters
                <span class="ml-auto text-uppercase">Reset Filters</span>
              </h1>
              <div class="sidebar__inner" >
                <div class="filter-body">
                  <div>
                    <h2 class="border-bottom filter-title">Categories</h2>
                    <div class="mb-30 filter-options">
                      <% for (var i = 0; i < categories.length; i++) { %>
                        <a href="/products/<%- categories[i].idCate %>">
                          <button class="filter" style="background-color: #00b13a;"><%- categories[i].nomCate %></button>
                        </a>
                        
                        
                      <% } %>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Products content -->
            <div class="content col-md-10 downside">
              <div
                class="d-flex justify-content-between border-bottom align-items-center"
              >
                <h2 class="title">Products</h2>
                <div class="filters-actions">
                  <div>
                    <button class="btn filter-btn d-md-none">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class="mr-2"
                        height="24px"
                        viewBox="0 0 24 24"
                        width="24px"
                        fill="#000000"
                      >
                        <path d="M0 0h24v24H0V0z" fill="none" />
                        <path d="M3 18h6v-2H3v2zM3 6v2h18V6H3zm0 7h12v-2H3v2z" />
                      </svg>
                      Filter
                    </button>
                  </div>
                  <div class="d-flex align-items-center"></div>
                </div>
              </div>

              <div class="contain">
                <% for (var i = 0; i < products.length; i++) { %>
                  <a href="/products/details/<%- products[i].idProd %>">
                    <div class="cards">
                      <div class="imgBx">
                        <img src="/img/products/<%- products[i].imgProd %>" alt="" />
                      </div>
                      <p>
                        <%- products[i].shortDescProd %>
                      </p>
                      <h3><%- products[i].nameProd %></h3>
                    </div>
                  </a>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script src="/js/products.js"></script>
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/barba.js/0.0.2/barba.min.js"></script>
    <script src="/js/main.js"></script>
    <script type="module" src="/js/transition.js"></script>
    <script>
      AOS.init();
    </script>
  </body>
</html>
