<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administration - Iguana Republic</title>

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/css/dashboard.css">
    <link rel="stylesheet" href="/css/elements/buttons.css">
    <link rel="stylesheet" href="/css/elements/options.css">
    <link rel="stylesheet" href="/css/elements/modal.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"/>
</head>
<body onload="checkCookie()">
	<section id="modal">
		<span class="overlay"></span>
		<div class="modal-box">
		<ion-icon name="alert-circle-outline"></ion-icon>
		<h2>CAUTION</h2>
		<h3>Are you sure about delete this record?</h3>

		<div class="buttons">
			<button class="close-btn">CANCEL</button>
			<a href="#" id="delete-modal"><button class="delete-btn">DELETE</button></a>
		</div>
	</div>

    <section id="sidebar">
		<div id="logo">
			<a href="/"><img src="/img/logo.png" class="logo" alt="" title="" width="250" height="100" /></a>
		</div>
		<ul class="side-menu top">
			<li >
				<a href="/dashboard">
					<i class='bx bxs-dashboard' ></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li class="active">
				<a href="/dashboard/products">
					<i class='bx bxs-shopping-bag' ></i>
					<span class="text">Products</span>
				</a>
			</li>
			<li>
				<a href="/dashboard/clients">
					<i class='bx bxs-group' ></i>
					<span class="text">Clients</span>
				</a>
			</li>
			<li>
				<a href="/dashboard/orders">
					<i class='bx bx-food-menu'></i>
					<span class="text">Orders</span>
				</a>
			</li>
		</ul>
		<ul class="side-menu">
			<li>
				<a href="/logout" class="logout">
					<i class='bx bxs-log-out-circle' ></i>
					<span class="text">Logout</span>
				</a>
			</li>
		</ul>
	</section>

    <section id="content">
        <nav>
            <i class='bx bx-menu' ></i>
            <a href="#" class="nav-link">Products</a>

            <form action="#">
                <div class="form-input">
                    <input type="search" name="" id="">
                    <button type="submit" class="search"><i class='bx bx-search' ></i></button>
                </div>
            </form>
        </nav>

        <main>
            <div class="head-title">
				<div class="left">
					<h1 style="color: #00b13a;">Products</h1>
				</div>
			</div>

            <div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Categories</h3>
                        <div class="head-title">
							<a href="/dashboard/category/newcategory" class="submit"><span>Create new category</span><i></i></a>
                        </div>
					</div>
					<table>
						<thead>
							<tr>
								<th>Id</th>
								<th>Category</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							<% for (var i = 0; i < categories.length; i++) { %>
								<tr>
									<td><%- categories[i].idCate %></td>
									<td><%- categories[i].nomCate %></td>
									<td class="navigation">
										<div class="menuToggle"></div>
										<div class="menu">
											<ul>
												<li style="--i:0.1s"><a href="/dashboard/category/info/<%- categories[i].idCate %>"><ion-icon name="alert-circle-outline"></ion-icon></a></li>
												<li style="--i:0.2s"><a href="/dashboard/category/modify/<%- categories[i].idCate %>"><ion-icon name="create-outline"></ion-icon></a></li>
												<li style="--i:0.3s"><a onclick="showModal('category/delete/<%- categories[i].idCate %>')" class="show-modal"><ion-icon name="trash-outline"></ion-icon></a></li>
											</ul>
										</div>
									</td>
								</tr>
							<% } %>
						</tbody>
					</table>
				</div>
            </div>

            <div class="table-data">
				<div class="order">
					<div class="head">
						<h3>Products</h3>
                        <div class="head-title" style="margin-top: 20px;">
							<a href="/dashboard/products/newproduct" class="submit"><span>Create new product</span><i></i></a>
                        </div>
					</div>
					<table>
						<thead>
							<tr>
								<th>Id</th>
								<th>Name</th>
								<th>Price</th>
								<th>Stock</th>
								<th>Category</th>
								<th>Actions</th>
							</tr>
						</thead>
						<tbody>
							<% for (var i = 0; i < products.length; i++) { %>
								<tr>
									<td><%- products[i].idProd %></td>
									<td><%- products[i].nameProd %></td>
									<td><%- products[i].priceProd %></td>
									<td><%- products[i].stockProd %></td>
									<td><%- products[i].Category.nomCate %></td>
									<td class="navigation">
										<div class="menuToggle"></div>
										<div class="menu">
											<ul>
												<li style="--i:0.1s"><a href="/dashboard/products/info/<%- products[i].idProd %>"><ion-icon name="alert-circle-outline"></ion-icon></a></li>
												<li style="--i:0.2s"><a href="/dashboard/products/modify/<%- products[i].idProd %>"><ion-icon name="create-outline"></ion-icon></a></li>
												<li style="--i:0.3s"><a onclick="showModal('products/delete/<%- products[i].idProd %>')" class="show-modal"><ion-icon name="trash-outline"></ion-icon></a></li>
											</ul>
										</div>
									</td>
								</tr>
							<% } %>
						</tbody>
					</table>
				</div>
            </div>
        </main>
    </section>

	<script src="/js/dashboard.js"></script>
	<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
	<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
	<script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
</body>