<!DOCTYPE html>
<html lang="zxx" class="no-js">
  <head>
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <link rel="shortcut icon" href="img/fav.png" />
    <meta name="author" content="codepixer" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <meta charset="UTF-8" />
    <title>Iguana Republic</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Mukta:300,400,700">
    <link rel="stylesheet" href="fonts/icomoon/style.css">
    <link rel="stylesheet" href="css/linearicons.css" />
    <link rel="stylesheet" href="css/font-awesome.min.css" />
    <link rel="stylesheet" href="css/bootstrap.css" />
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/jquery-ui.css">
    <link rel="stylesheet" href="css/magnific-popup.css" />
    <link rel="stylesheet" href="css/nice-select.css" />
    <link rel="stylesheet" href="css/animate.min.css" />
    <link rel="stylesheet" href="css/owl.carousel.css" />
    <link rel="stylesheet" href="css/owl.theme.default.min.css">
    <link rel="stylesheet" href="css/owl.carousel.min.css">
    <link rel="stylesheet" href="/css/main.css" />
    <link rel="stylesheet" href="/css/cart.css" />
    <link rel="stylesheet" href="/css/elements/buttons.css" />
  </head>

  <body id="welcome">
    <%- include('header', {}); %>
    <div class="container">
      <div class="small-container cart-page">
        <table>
            <tr>
              <th>Product</th>
              <th>Quantity</th>
              <th>Subtotal</th>
            </tr>

            <% for (var i = 0; i < products.length; i++) { %>
              <tr>
                  <td>
                    <div class="cart-info">
                      <img src="/img/products/<%- products[i].Product.imgProd %>" alt="">
                      <div>
                        <p><%- products[i].Product.nameProd %></p>
                        <small>Price: <%- products[i].Product.priceProd %></small>
                        <br>
                        <a href="/cart/delete/<%- products[i].idDetCart %>">Remove</a>
                      </div>
                    </div>
                  </td>
                  <td><input type="number" value="<%- products[i].quantity %>"></td>
                  <td><%- subtotal[0][i].total %></td>
              </tr>
            <% } %>
        </table>

        <div class="total-price">
          <table>
            <td>Total</td>
            <td>$<%- cart.totalPriceCart %></td>
          </table>
          <br>
        </div>

        <div class="checkout">
          <a href="#" class="submit"><span>Checkout</span><i></i></a>
        </div>
      </div>
    </div>
  </body>
</html>
