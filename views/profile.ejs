    <!-- Site Title -->
    <title>Iguana Republic</title>

    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet">
    <!--
        CSS
        ============================================= -->
    <link rel="stylesheet" href="css/linearicons.css">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="/css/main.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"/>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="/css/profile.css">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="shortcut icon" href="views/img/fav.png">
	<link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet"/>
    <script src="https://cdn.tailwindcss.com"></script>
	<link rel="stylesheet" href="/css/newNav.css">
    <title>Iguana Republic</title>
</head>

<body>
        
	<%- include('header', { opcion: 2 }); %>
    <div class="container light-style flex-grow-1 container-p-y" id="userpage">
        <h4 class="font-weight-bold py-3 mb-4">
            Account settings
        </h4>
        <div class="card overflow-hidden">
            <div class="row no-gutters row-bordered row-border-light">
                <div class="col-md-3 pt-0">
                    <div class="list-group account-settings-links" id="list-tab" role="tablist">
                        <a class="list-group-item list-group-item-action active" id="list-home-list" data-bs-toggle="list" href="#account-general" role="tab" aria-controls="list-home">Information</a>
                        <a class="list-group-item list-group-item-action" id="list-profile-list" data-bs-toggle="list" href="#account-change-password" role="tab" aria-controls="list-profile">Change password</a>
                        <a class="list-group-item list-group-item-action" id="list-messages-list" data-bs-toggle="list" href="#account-info" role="tab" aria-controls="list-messages">Orders</a>
                      </div>
                </div>
                <div class="col-md-9">
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="account-general">
                            <div class="card-body">
                                <div class="form-group">
                                    <label class="form-label">Username</label>
                                    <input type="text" class="form-control mb-1" value="<%- profile.userClient %>" id="userClient">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Name</label>
                                    <input type="text" class="form-control" value="<%- profile.nameClient %>" id="nameClient">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Email</label>
                                    <input type="text" class="form-control mb-1" value="<%- profile.mailClient %>" id="mailClient">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Country</label>
                                    <select class="custom-select" id="nationClient">
                                        <% for (var i=0; i < countries.length; i++) { %>
                                            <% if (profile.nationClient == countries[i].name) { %>  
                                                <option selected><%- countries[i].name %></option>
                                            <% } else { %>
                                                <option><%- countries[i].name %></option>
                                            <% } %>
                                        <% } %>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Phone</label>
                                    <input type="number" class="form-control" id="phoneClient" value="<%- profile.phoneClient %>">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Address</label>
                                    <input type="text" class="form-control" value="<%- profile.addressClient %>" id="addressClient" autocomplete="off">
                                    <% if (profile.addressClient == "N/A") { %>
                                        <div class="alert alert-danger mt-3">
                                            You need an address to checkout your products
                                        </div>
                                    <% } %>
                                </div>
                                <div class="text-right mt-3">
                                    <button type="button" id="updateUser" class="btn btn-primary">Save changes</button>&nbsp;
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="account-change-password">
                            <div class="card-body pb-2">
                                <div class="form-group">
                                    <label class="form-label">Current password</label>
                                    <input type="password" id="passwordClient" class="form-control">
                                    <div id="alertOld" class="alert alert-danger mt-3" hidden>
                                        You need your actual password!
                                    </div>
                                    <div id="alertWrong" class="alert alert-danger mt-3" hidden>
                                        Your password is incorrect!
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">New password</label>
                                    <input type="password" id="newPassword" class="form-control">
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Repeat new password</label>
                                    <input type="password" id="repeatPassword" class="form-control">
                                    <div id="alertNew" class="alert alert-danger mt-3" hidden>
                                        The passwords doesn't match!
                                    </div>
                                    <div id="alertSuccess" class="alert alert-success mt-3" hidden>
                                        Your password was modified!
                                    </div>
                                </div>
                                <div class="text-right mt-3">
                                    <button type="button" id="updatePassword" class="btn btn-primary" disabled>Save changes</button>&nbsp;
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="account-info">
                            <hr class="border-light m-0">
                            <div class="card-body pb-2">
                                <h6 class="mb-4">Recent Orders</h6>
                                <div class="table-data">
                                    <div class="order">
                                        <table>
                                            <thead>
                                                <tr>
                                                    <th>Date Order</th>
                                                    <th>Status</th>
                                                    <th>Total Order</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for (var i=0; i < orders.length; i++) { %>
                                                    <tr>
                                                        <td><%- orders[i].dateOrder %></td>
                                                        <td><%- orders[i].statusOrder %></td>
                                                        <td><%- orders[i].totalOrder %></td>
                                                        <td>
                                                            <li style="--i:0.1s; display: block;"><a href="/profile/orders/<%- orders[i].CartIdCart %>"><ion-icon style="font-size: 24px;" name="alert-circle-outline"></ion-icon></a></li>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="/js/vendor/jquery-3.7.1.min.js"></script>
    <script src="/js/userInformation.js"></script>
	<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
	<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>