<body>
        
	<%- include('header', { opcion: 2 }); %>
    <div class="container light-style flex-grow-1 container-p-y" id="userpage">
        <h4 class="font-weight-bold py-3 mb-4">
            Account settings
        </h4>
        <div class="card overflow-hidden">
            <div class="row no-gutters row-bordered row-border-light">
                <div class="col-md-3 pt-0">
                    <div class="list-group account-settings-links" id="list-tab" role="tablist">
                        <a class="list-group-item list-group-item-action" href="/profile"><i class="ri-arrow-left-line"></i> Return</a>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="account-general">
                            <div class="card-body">
                                <h4 class="mb-4">Products</h4>
                                <div class="table-data">
                                    <div class="order">
                                        <table>
                                            <thead>
                                                <tr>
                                                    <th>Name</th>
                                                    <th>Price</th>
                                                    <th>Quantity</th>
                                                    <th>Subtotal</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% for (var i = 0; i < products.length; i++) { %>
                                                    <tr>
                                                        <td><%- products[i].Product.nameProd %></td>
                                                        <td><%- products[i].unitPrice %></td>
                                                        <td><%- products[i].quantity %></td>
                                                        <td><%- subtotal[0][i].total %></td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/js/vendor/jquery-3.7.1.min.js"></script>
	<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
	<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
